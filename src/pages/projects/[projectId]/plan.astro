---
import Layout from "../../../layouts/Layout.astro";
import PlanGenerator from "../../../components/PlanGenerator";

const { projectId } = Astro.params;

if (!projectId) {
  return Astro.redirect("/");
}
---

<Layout title="Generate Travel Plan">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Generate Travel Plan</h1>
    <PlanGenerator projectId={projectId} client:visible />
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
  }
</style>
